<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!--Root container-->
    <RelativeLayout
        android:id="@+id/root_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <!--View while view is collapsed-->
        <RelativeLayout
            android:id="@+id/collapse_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp">
                <!--Icon of floating widget -->
                <ImageView
                    android:id="@+id/collapsed_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_speed_limit"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:layout_alignBottom="@+id/collapsed_iv"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="end"
                    android:layout_marginStart="20dip"
                    android:layout_marginBottom="0dp"
                    android:background="#07000000"
                    android:gravity="center"
                    android:padding="6dip"
                    android:text="60"
                    android:textColor="@android:color/black"
                    android:textSize="24dp" />
            </RelativeLayout>

            <!--Close button-->
            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/ic_close"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <!--View while view is expanded-->
        <LinearLayout
            android:id="@+id/expanded_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:orientation="horizontal"
            android:padding="8dp"
            android:visibility="gone">

            <!--Album image for the song currently playing.-->
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp">
                <!--Icon of floating widget -->
                <ImageView
                    android:id="@+id/expanded_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_speed_limit"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:layout_alignBottom="@+id/expanded_iv"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="end"
                    android:layout_marginStart="20dip"
                    android:layout_marginBottom="0dp"
                    android:background="#07000000"
                    android:gravity="center"
                    android:padding="6dip"
                    android:text="60"
                    android:textColor="@android:color/black"
                    android:textSize="24dp" />
            </RelativeLayout>


            <!--Previous button-->
            <ImageView
                android:id="@+id/prev_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/ic_previous"
                tools:ignore="ContentDescription" />

            <!--Play button-->
            <!--
            <ImageView
                android:id="@+id/play_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_speedometer"
                tools:ignore="ContentDescription" />
            -->
            <edu.rutgers.brange.speedlimitwidget.SpeedometerView
                android:id="@+id/speedometer"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                tools:ignore="ContentDescription"/>

            <!--Next button-->
            <ImageView
                android:id="@+id/next_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_play_next"
                tools:ignore="ContentDescription" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/close_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_close" />

                <ImageView
                    android:id="@+id/open_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/ic_open" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>